# Define file contents
readme_md = """
# üîê Safe Admin Dashboard (Slack-only)

A lightweight, no-backend dashboard for viewing Safe{Wallet} data ‚Äî deployable instantly to GitHub Pages, Vercel, or any static host.

## üöÄ Features
- View Safe address and current network
- Display balances (static/dummy for now)
- Show transaction history (static)
- Customize via `config.js`
- Built using vanilla HTML/CSS/JS
- No dependencies, no build step
- Slack notifications only (no Discord)

## üìÅ Files Included
- `index.html` ‚Äì Main dashboard UI
- `style.css` ‚Äì Dashboard styling
- `dashboard.js` ‚Äì JS logic for loading and populating dashboard
- `config.js` ‚Äì Set your Safe address and network here

## üì¶ Deployment
You can deploy this in 3 ways:

### üåÄ GitHub Pages
1. Push this folder to a GitHub repository
2. Go to **Settings > Pages**
3. Set the source to `main` branch `/root`
4. Done ‚Äî your site is live

### ‚ñ≤ Vercel
1. Import this repo into [vercel.com](https://vercel.com)
2. No config required ‚Äî it's a static project
3. Deploy!

### üñ•Ô∏è Manual Hosting
Just unzip the folder and open `index.html` in your browser.

---

Built for Safe 0xAfD5f60aA8eb4F488eAA0eF98c1C5B0645D9A0A0 with ‚ù§Ô∏è.
"""

vercel_json = """
{
  "version": 2,
  "public": true,
  "builds": [],
  "routes": [
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
"""

# Zip contents from earlier
index_html = """
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Safe Admin Dashboard</title>
  <link rel="stylesheet" href="style.css" />
</head>
<body>
  <div id="dashboard">
    <h1>üîê Safe Admin Dashboard</h1>
    <p>Safe Address: <span id="safeAddress"></span></p>
    <p>Network: <span id="network"></span></p>
    <div id="balanceSection">
      <h2>üí∞ Balances</h2>
      <ul id="balances"></ul>
    </div>
    <div id="historySection">
      <h2>üìú Transaction History</h2>
      <ul id="txHistory"></ul>
    </div>
  </div>
  <script src="config.js"></script>
  <script src="dashboard.js"></script>
</body>
</html>
"""

style_css = """
body {
  font-family: Arial, sans-serif;
  margin: 0;
  padding: 2rem;
  background: #f7f9fc;
  color: #333;
}
#dashboard {
  max-width: 800px;
  margin: auto;
  background: white;
  padding: 2rem;
  border-radius: 10px;
  box-shadow: 0 0 10px rgba(0,0,0,0.1);
}
h1, h2 {
  color: #2c3e50;
}
ul {
  padding-left: 20px;
}
"""

dashboard_js = """
document.addEventListener("DOMContentLoaded", async () => {
  document.getElementById("safeAddress").textContent = config.safeAddress;
  document.getElementById("network").textContent = config.network;

  // Dummy balance
  document.getElementById("balances").innerHTML = '<li>ETH: 0.00</li>';

  // Dummy transaction history
  document.getElementById("txHistory").innerHTML = '<li>No recent transactions</li>';
});
"""

config_js = """
const config = {
  safeAddress: "0xAfD5f60aA8eb4F488eAA0eF98c1C5B0645D9A0A0",
  network: "Ethereum"
};
"""

# Create zip archive with all files
zip_path = "/mnt/data/SafeDashboard_SLACK_ONLY_Package.zip"
with ZipFile(zip_path, "w") as zipf:
    zipf.writestr("index.html", index_html)
    zipf.writestr("style.css", style_css)
    zipf.writestr("dashboard.js", dashboard_js)
    zipf.writestr("config.js", config_js)
    zipf.writestr("README.md", readme_md)
    zipf.writestr("vercel.json", vercel_json)

zip_path
